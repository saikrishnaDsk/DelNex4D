package com.example.sprhibboot.dao;

import javax.transaction.Transactional;

import org.hibernate.Criteria;
import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.criterion.Restrictions;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import com.example.sprhibboot.model.Seller;

@Component
@Transactional
public class SellerDao {
	@Autowired
	SessionFactory sessionfactory;

	public void saveSeller(Seller sellers)
	{
		Session session=sessionfactory.getCurrentSession();
		session.save(sellers);
	}
	
	
	public Seller doValidate(String username,String password)
	{
		Session session=sessionfactory.getCurrentSession();
		Criteria crit=session.createCriteria(Seller.class);
		crit.add(Restrictions.ilike("username", username));
		crit.add(Restrictions.eq("password",password));
		Seller seller=(Seller) crit.uniqueResult();
			
		return seller ;
	}
}
