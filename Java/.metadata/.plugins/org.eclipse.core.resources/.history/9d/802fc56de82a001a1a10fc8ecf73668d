package pro1;

import java.util.Scanner;

public class Car {
	//static int num =0;
	String brand;
	String model;
	String color;
	double price;
	
	public String details() {
		String det = "Brand: "+brand+"\nModel: "+model+"\nColor: "+color+"\nPrice: "+price;
		return det;
	}
	public Car(String brand,String model,String color,double price) {
		
		
		// TODO Auto-generated constructor stub
		this.brand=brand;
		this.model=model;
		this.color=color;
		this.price=price;
	}

	public static void main(String [] args) {
		Car t = new Car("Volvo","S60","red",4500000);
		Scanner s = new Scanner(System.in);
		System.out.println("Enter Car Details: Brand, Model, Color, Price\n");
		//t.details("Volvo","s60","red",4500000);
		String brand = s.next();
		String model = s.next();
		String color = s.next();
		double price = s.nextDouble();
		System.out.println(+Brand,+model,+color,+price);
		System.out.println(t.details());
	}

}
