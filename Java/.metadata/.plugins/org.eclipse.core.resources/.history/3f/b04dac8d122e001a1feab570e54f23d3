package pro1;

import java.io.BufferedOutputStream;
import java.io.DataOutputStream;
import java.io.File;
import java.io.FileOutputStream;
import java.io.FileWriter;
import java.util.Scanner; 
public class Scan 
{ 
	public static void main(String[] args) throws Exception 
	{ 
		File file = 
				new File("C:\\Users\\admin\\Documents\\GitHub\\DelNex4D\\Java\\pro1\\src\\pro1\\data.txt"); 
		Scanner sc = new Scanner(file); 
		File f1 = new File("C:\\\\Users\\\\admin\\\\Documents\\\\GitHub\\\\DelNex4D\\\\Java\\\\pro1\\\\src\\\\pro1\\\\newdata.txt");
//		FileOutputStream fos = new FileOutputStream("newdata.txt");
//		DataOutputStream outStream = new DataOutputStream(new BufferedOutputStream(fos));
		FileWriter w = new FileWriter(f1);

		while (sc.hasNextLine()) {
			//      System.out.println(sc.nextLine()); 
			String a[] = (sc.nextLine()+"\n").split(",");
			//    	System.out.print("\t");
			for(String str:a) {
				//    		System.out.print("\t");
//				System.out.print(str+"\t");
//				outStream.writeUTF(str+"\t");
				w.write(str+"\t");
			}
		}
		sc.close();
//		outStream.close();
		w.close();
	}
} 